<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:padding="5dp">

    <TextView
        android:id="@+id/textViewUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom|right"
        android:textSize="40sp"
        android:background="#DDDCDC"
        android:textColor="#000000"
        android:fontFamily="@font/dig1"/>
    <TextView
        android:id="@+id/textViewCalculator"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="bottom|right"
        android:hint="0"
        android:textSize="100sp"
        android:background="#DDDCDC"
        android:textColor="#000000"
        android:fontFamily="@font/dig1"
        android:layout_below="@+id/textViewUp"/>

    <Button
        android:id="@+id/buttonCE"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCalculator"
        android:layout_alignParentLeft="true"
        android:text="CE"
        android:textSize="50sp"
        android:background="#DDDCDC"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>
    <Button
        android:id="@+id/buttonC"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCalculator"
        android:layout_toRightOf="@+id/buttonCE"
        android:text="C"
        android:textSize="50sp"
        android:background="#DDDCDC"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/buttonBS"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCalculator"
        android:layout_toRightOf="@+id/buttonC"
        android:text="BS"
        android:textSize="50sp"
        android:background="#DDDCDC"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCalculator"
        android:layout_toRightOf="@+id/buttonBS"
        android:text="/"
        android:textSize="50sp"
        android:background="#DDDCDC"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCE"
        android:layout_alignParentLeft="true"
        android:text="7"
        android:textSize="50sp"
        android:background="#F1F1F1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonC"
        android:layout_toRightOf="@+id/button7"
        android:text="8"
        android:textSize="50sp"
        android:background="#F1F1F1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonBS"
        android:layout_toRightOf="@+id/button8"
        android:text="9"
        android:textSize="50sp"
        android:background="#F1F1F1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/buttonMulti"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDivision"
        android:layout_toRightOf="@+id/button9"
        android:text="*"
        android:textSize="50sp"
        android:background="#DDDCDC"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:text="4"
        android:textSize="50sp"
        android:background="#F1F1F1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button4"
        android:text="5"
        android:textSize="50sp"
        android:background="#F1F1F1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button9"
        android:layout_toRightOf="@+id/button5"
        android:text="6"
        android:textSize="50sp"
        android:background="#F1F1F1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMulti"
        android:layout_toRightOf="@+id/button6"
        android:text="-"
        android:textSize="50sp"
        android:background="#DDDCDC"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:text="1"
        android:textSize="50sp"
        android:background="#F1F1F1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button1"
        android:text="2"
        android:textSize="50sp"
        android:background="#F1F1F1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@+id/button2"
        android:text="3"
        android:textSize="50sp"
        android:background="#F1F1F1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/buttonSum"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSub"
        android:layout_toRightOf="@+id/button3"
        android:text="+"
        android:textSize="50sp"
        android:background="#DDDCDC"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/buttonSumSub"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:text="+/-"
        android:textSize="50sp"
        android:background="#DDDCDC"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/buttonSumSub"
        android:text="0"
        android:textSize="50sp"
        android:background="#F1F1F1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button0"
        android:text="."
        android:textSize="50sp"
        android:background="#DDDCDC"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/buttonResult"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSum"
        android:layout_toRightOf="@+id/buttonDot"
        android:text="="
        android:textSize="50sp"
        android:background="#DDDCDC"
        android:layout_marginTop="5dp"/>

</RelativeLayout>